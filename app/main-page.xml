<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
  <Page.actionBar>
      <ActionBar title="Little Pygge" icon="" class="action-bar">
      </ActionBar>
  </Page.actionBar>
  <StackLayout class="login-page">
    <FlexboxLayout class="header">
      <Image src="res://pygge100@3x.png" stretch="none" class="logo"/> 
      <Label text="Little Pygge" class="h1 text-center pecita"/>
    </FlexboxLayout>
    
    <StackLayout orientation="horizontal" class="start-page-btn">
      <Button text="Sign in" class="secondary-btn"/>
      <Button text="Sign up" class="secondary-btn"/>
    </StackLayout>

    <StackLayout class="login">
      <StackLayout class="userInput">
        <TextField hint="email@email.com" keyboardType="email" autocorrect="false" autocaptalizationType="none"/>
        <TextField hint="********" secure="true" />
      </StackLayout>
      <Button text="Login" class="btn"/>
      <Button text="Forgot?" class="link" />
    </StackLayout>
  </StackLayout>
</Page>
