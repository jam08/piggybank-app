<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="DASHBOARD"/>
  </Page.actionBar>
  <GridLayout id="children" columns="*, *" rows="*, 2*, 10*">
    <Button
      id="add-child"
      text="+ ADD CHILD" 
      tap="addChild"
      row="0"
      column="0"
      colSpan="2"
      class="secondary-btn"
      horizontalAlignment="right"
    />
    <Label
      text="MY CHILDREN"
      row="1"
      column="0"
      colSpan="2"
      class="grid-title"
    />
    <ListView 
      items="{{ children }}"
      row="2"
      col="0"
      colSpan="2"
    >
      <ListView.itemTemplate>
        <!--<Image src="{{ image }}" stretch="aspectFit"/>-->
        <Label text="{{ name }}"  class="grid-item" horizontalAlignment="center" verticalAlignment="center"/>
        <!--<Label text="{{ value }}" horizontalAlignment="right" verticalAlignment="center"/>-->
      </ListView.itemTemplate>
    </ListView>
  </GridLayout>
</Page>