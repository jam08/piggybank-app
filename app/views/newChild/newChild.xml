<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
  <actionBar>
    <NavigationButton  
      text="Cancel"
      android.systemIcon="ic_menu_close_clear_cancel" 
      tap="onNavBtnTap"  
    />
  </actionBar>
  <GridLayout
    id="container"  
    columns="*, 3*" 
    rows="*, *, *, *, *, *"
    backgroundColor="#ffffff"
  >
    <Label 
      col="0" 
      row="0" 
      colSpan="2" 
      class="grid-title grid-rows" 
      text="NEW CHILD"
    />
    <Image 
      col="0" 
      row="1" 
      src="res://pygge3x_bw" 
      stretch="aspectFit"
      width="80"
      verticalAlignment="center"
      horizontalAlignment="left"
      marginLeft="10"
    />
    <Button 
      col="1"
      row="1"
      id="profileImg"
      text="add photo"
      borderWidth="1"
      borderColor="transparent"
      backgroundColor="transparent"
      textTransform="capitalize"
      horizontalAlignment="left"
      verticalAlignment="center"
      marginRight="10"
    />
    <Label
      col="0"
      row="2"
      text="Name"
      class="grid-rows input-label" 
    />
    <TextField
      col="0"
      row="3"
      colSpan="2"
      hint="Child name"
      id="childName"
      class="grid-rows"  
      autocorrect="false" 
      autocaptalizationType="none"
      borderWidth="1"
      borderColor="transparent" 
    />
    <ListView
      col="0"
      row="4"
      colSpan="2" 
      id="allowance"
      class="grid-rows input-label"
      items="{{ allowanceItems }}"
      separatorColor="transparent"
    />
    <label
      col="0"
      row="5"
      text="Alowance"
      class="grid-rows input-label"
    />
    <TextField
      col="1"
      row="5"
      hint="0"
      id="cashValue" 
      autocorrect="false" 
      autocaptalizationType="none"
      borderWidth="1"
      borderColor="transparent"
      horizontalAlignment="left"
    />
  </GridLayout>
</Page>
