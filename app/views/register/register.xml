<!--<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">-->
<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="Register">
      <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    </ActionBar>
  </Page.actionBar>
  <GridLayout 
    columns="*" 
    rows="100, auto, auto, auto, auto, auto, auto, 80">
    <Label 
      text="Register" 
      row="0" 
      col="1"
      colSpan="2"  
      class="h2 pecita"
    />
    <Label 
      text="Please, fill in the fields below" 
      row="1" 
      col="0"
      colSpan="2"  
      class="h3 form-header"
    />
    <TextField 
      id="firstName"
      text="{{ firstName }}"
      hint="First Name" 
      keyboardType="email" 
      autocorrect="false" 
      autocaptalizationType="none" 
      row="2" 
      col="0" 
      colSpan="2"
    />
    <TextField 
      id="surname"
      text="{{ surname }}"
      hint="Surname" 
      keyboardType="email" 
      autocorrect="false" 
      autocaptalizationType="none" 
      row="3" 
      col="0" 
      colSpan="2"/>
    <TextField 
      id="email"
      text="{{ email }}" 
      hint="email@email.com" 
      keyboardType="email" 
      autocorrect="false" 
      autocaptalizationType="none" 
      row="4" 
      col="0" 
      colSpan="2"
    />
    <TextField 
      id="password" 
      hint="********" 
      secure="true" 
      row="5" 
      col="0" 
      colSpan="2"
    />
    <TextField 
      id="confirm" 
      hint="Confirm password" 
      secure="true" 
      row="6" 
      col="0" 
      colSpan="2"
    />
    <Button 
      text="Sign up" 
      row="7" 
      col="0" 
      colSpan="2" 
      tap="signUp" 
      class="btn"
    />
  </GridLayout>
</Page>
